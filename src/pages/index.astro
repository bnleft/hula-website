---
import BaseLayout from "@layouts/Base.astro";
import VideoSource from "@assets/eye-tracking.mp4";
---

<BaseLayout title="Home">
  <style>
    @keyframes gradientAnimation {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .animated-gradient {
      background: linear-gradient(-45deg, #667eea, #764ba2, #6B8DD6, #8E9EAB);
      background-size: 400% 400%;
      animation: gradientAnimation 20s ease infinite;
    }
  </style>

  <section class="animated-gradient text-center py-20">
    <div class="max-w-4xl mx-auto text-white">
      <h1 class="text-4xl font-bold mb-6">Our Mission</h1>
      <p class="text-xl">To eliminate radiology errors and improve patient outcomes through cutting-edge computer vision research.</p>
    </div>
  </section>

  <section class="animated-gradient py-20">
    <div class="max-w-6xl mx-auto">
      <video class="w-full rounded-lg shadow-xl" autoplay loop muted>
        <source src={VideoSource} type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  </section>

  <section class="py-20 animated-gradient">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-center text-3xl text-gray-600 font-bold mb-10">Contact Us</h2>
      <form class="max-w-lg mx-auto">
        <div class="mb-8">
          <label for="name" class="block mb-2 text-lg font-medium text-gray-800">Your Name</label>
          <input type="text" id="name" class="w-full border border-gray-300 px-4 py-3 rounded-md text-gray-700 focus:ring-blue-500 focus:border-blue-500" required>
        </div>
        <div class="mb-8">
          <label for="email" class="block mb-2 text-lg font-medium text-gray-800">Your Email</label>
          <input type="email" id="email" class="w-full border border-gray-300 px-4 py-3 rounded-md text-gray-700 focus:ring-blue-500 focus:border-blue-500" required>
        </div>
        <div class="mb-8">
          <label for="message" class="block mb-2 text-lg font-medium text-gray-800">Your Message</label>
          <textarea id="message" rows="4" class="w-full border border-gray-300 px-4 py-3 rounded-md text-gray-700 focus:ring-blue-500 focus:border-blue-500" required></textarea>
        </div>
        <button type="submit" class="w-full px-4 py-3 bg-blue-700 text-white font-bold rounded-md hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
          Send Message
        </button>
      </form>
    </div>
  </section>
</BaseLayout>
