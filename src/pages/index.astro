---
import BaseLayout from "@layouts/Base.astro";
import VideoSource from "@assets/eye-tracking.mp4";
---

<BaseLayout title="Home">
  <style>
    @keyframes gradientAnimation {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .animated-gradient {
      background: linear-gradient(-45deg, #667eea, #764ba2, #6B8DD6, #8E9EAB);
      background-size: 400% 400%;
      animation: gradientAnimation 20s ease infinite;
    }
  </style>

  <section class="animated-gradient text-center py-20">
    <div class="max-w-4xl mx-auto text-white">
      <h1 class="text-4xl font-bold mb-6">Our Mission</h1>
      <p class="text-xl">To eliminate radiology errors and improve patient outcomes through cutting-edge computer vision research.</p>
    </div>
  </section>

  <section class="animated-gradient py-20">
    <div class="max-w-6xl mx-auto">
      <video class="w-full rounded-lg shadow-xl" autoplay loop muted>
        <source src={VideoSource} type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  </section>

  <footer class="animated-gradient flex justify-center items-center py-20">
    <a href="mailto:akashcseklu123@gmail.com" class="text-white font-bold">Contact Us</a>
  </footer>
</BaseLayout>
